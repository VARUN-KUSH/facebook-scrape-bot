{ 
  "name": "facebook-bot",
  "displayName": "Facebook bot",
  "version": "0.0.1",
  "description": "facebook bot for data scraping and user conversation",
  "author": "varun",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.89.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "tabs",
      "scripting",
      "storage",
      "unlimitedStorage",
      "offscreen",
      "downloads",
      "identity",
      "https://www.googleapis.com/"
     
    ],
    "oauth2": {
    "client_id": "758532640258-p231i5f3q4ieg6demahu029pbs6ajbpu.apps.googleusercontent.com.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
    "host_permissions": [
      "https://*/*",
      "https://www.facebook.com/*"
    ]
  
  }
}
